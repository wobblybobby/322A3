<div class="row">
 <div class="col-md-12">
 <h2>Departments</h2>
 <hr />
 <div class="table-reponsive">
     <table class="table">
         <thead>
             <tr>
                 <th>Department&nbsp;Number</th>
                 <th>Department&nbsp;Name</th>
             </tr>
         </thead>
         <tbody>
             {{#each departments}}
             <tr>
                 <td><a href="/employees?department={{this.departmentId}}">{{this.departmentId}}</a></td>
                 <td><a href="/employees?department={{this.departmentId}}">{{this.departmentName}}</a></td>
             </tr>
             {{/each}}
         </tbody>
     </table>
 </div>
 </div>
</div>
