{{!-- Part 2 Step 1: --}}

<div class="row">
{{#if images}}
<div class="col-md-12">
    <h2><a href="/images/add" class="btn btn-success pull-right">Add New Image</a></h2>
    <hr />
</div>
    {{#each images}}
    <div class="col-md-4">
        <img src="/images/uploaded/{{this}}" class="img-responsive img-thumbnail" />
    </div>
    {{/each}}
{{else}}
<div class="col-md-12 text-center">
    <strong>No Images Available</strong>
</div>
{{/if}}
</div>